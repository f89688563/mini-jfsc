@import 'style/weui.wxss';

page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}

.weui-cells.first{
    margin-top: 0;
}

.weui-cells-row{
  display: flex;
  flex-direction: row;
  text-align: center;
  padding: 10rpx;
}

.weui-cell-inline{
    display: inline-block;
    text-align: center;
    width: 50%;
    padding: 16rpx 0;
}

.center{
    text-align: center;
}

/*底部bar*/
.fix-bottom-box{
    padding-bottom: 112rpx;
}

.fix-bottom-box .fix-bottom-item{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 112rpx;
    overflow: hidden;
    display: flex;
}

.fix-bottom-box .fix-bottom-item .weui-btn{
    flex:1;
    margin:0;
    border: none;
    border-radius: 0;
    font-size: 17px;
    height: 112rpx;
    line-height: 112rpx;
    color: #fff;
    text-align: center;
}

.fix-bottom-box .fix-bottom-item .weui-btn_default{
    background: #fff;
    color: #666666;
}
.fix-bottom-box .fix-bottom-item .weui-btn_confirm{
    background: #f26100;
}

/*商品列表*/
.goods_desc{
    text-align: left;
    padding: 0 48rpx;
    font-size: 14px;
}

.goods_desc .price{
    color: #ff8736;
}

.goods_desc .remain{
    color: #888888;
}

.goods_desc .remain text{
    color: #333;
}

/*图片*/
image{
    width: 100%;
}
.img-large, .img-middle, .img-small, .img-min, .img-min-x{
    margin-right: 16rpx;
}
.img-large{
    height: 300rpx;
    width: 300rpx;
}
.img-middle{
  height: 144rpx;
  width: 144rpx;
}
.img-small{
  height: 96rpx;
  width: 96rpx;
}
.img-min{
  height: 64rpx;
  width: 64rpx;
}
.img-min-x{
  height: 32rpx;
  width: 32rpx;
}

.no-border .weui-cell:before, .no-border .weui-media-box:before{
  border-top: none;
}
.no-border .weui-cell:after, .no-border .weui-media-box:after{
  border-bottom: none;
}

.weui-media-box__desc{
    margin-top: 16rpx;
}

/*颜色*/
.title{
    color: #333;
}
.desc{
    color: #888888;
}
